    "@tailwindcss/typography": "^0.5.16",
    "@types/mdx": "^2.0.13",
    "convex": "^1.29.0",
    "daisyui": "^5.0.35",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.12.1",
    "give-care-app": "workspace:*",
    "gray-matter": "^4.0.3",
    "next": "^16.0.0",
    "next-mdx-remote": "^5.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
