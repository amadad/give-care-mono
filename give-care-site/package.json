    "@playwright/test": "^1.49.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^24.10.0",
    "@types/react": "^19",
    "@vitejs/plugin-react": "^4.3.3",
    "@vitest/ui": "^4.0.8",
    "babel-plugin-react-compiler": "^1.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.39.1",
    "eslint-config-next": "^16.0.0",
    "jsdom": "^26.0.0",
    "prettier": "^3.6.2",
