# Convex Deployment
CONVEX_DEPLOYMENT=

# Google Gemini API (required for Mira agent - Gemini 2.5 Flash-Lite)
GEMINI_API_KEY=

# OpenAI API (required for embeddings with Agent Component)
OPENAI_API_KEY=

# Twilio SMS Integration
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=          # Also used for webhook signature verification
TWILIO_PHONE_NUMBER=

# Stripe Payment Processing
STRIPE_SECRET_KEY=
STRIPE_WEBHOOKS_SECRET=     # Required for webhook signature verification

# Frontend URL (for checkout success/cancel redirects and SMS links)
FRONTEND_URL=               # e.g., https://givecare.com or http://localhost:3000

# Resend Email Service
RESEND_API_KEY=

# Feature Flags
FF_EMA=true                     # Enable automatic EMA check-in cron jobs (default: false)
