{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "paths": {
      "@harness/*": ["packages/*"],
      "@harness/app/*": ["apps/*"],
      "@harness/tests/*": ["tests/*"],
      "@harness/docs/*": ["docs/*"]
    }
  },
  "include": ["packages", "apps", "tests", "docs"],
  "exclude": ["node_modules", "dist"]
}
