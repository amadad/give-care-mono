{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/src/*": ["src/*"],
      "@/convex/*": ["convex/*"]
    }
  },
  "include": ["src", "convex", "index.ts"],
  "exclude": ["node_modules"]
}
