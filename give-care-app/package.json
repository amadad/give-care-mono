{
  "name": "give-care-app",
  "version": "1.3.0",
  "description": "GiveCare - AI-powered SMS caregiving support with clinical burnout monitoring",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "type": "module",
  "scripts": {
    "dev": "convex dev",
    "deploy": "convex deploy",
    "codegen": "convex codegen --typecheck enable --once",
    "test": "vitest",
    "test:simulate": "vitest tests/simulation/simulation.test.ts",
    "test:simulate:watch": "vitest tests/simulation/simulation.test.ts --watch",
    "test:property": "vitest tests/simulation/property-based.test.ts",
    "test:all": "vitest tests/",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\""
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.3.24",
    "@convex-dev/agent": "^0.2.12",
    "@convex-dev/rag": "^0.5.4",
    "@convex-dev/rate-limiter": "^0.2.14",
    "@convex-dev/workflow": "^0.2.7",
    "@google/genai": "^1.27.0",
    "ai": "^5.0.89",
    "convex": "^1.11.0",
    "resend": "^4.0.0",
    "rrule": "^2.8.1",
    "stripe": "^14.10.0",
    "zod": "^3.25.40"
  },
  "devDependencies": {
    "@convex-dev/eslint-plugin": "^1.0.0",
    "@eslint/js": "^9.0.0",
    "@types/luxon": "^3.4.2",
    "@types/node": "^22.0.0",
    "eslint": "^9.0.0",
    "fast-check": "^4.3.0",
    "prettier": "^3.0.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.0.0",
    "vitest": "^2.1.9"
  }
}
