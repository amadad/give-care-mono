{
  "name": "give-care-app",
  "version": "1.3.0",
  "description": "GiveCare - AI-powered SMS caregiving support with clinical burnout monitoring",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "type": "module",
  "scripts": {
    "dev": "convex dev",
    "predeploy": "find convex -name '*.js' -type f ! -path 'convex/_generated/*' -delete && find convex -name '*.js.map' -type f ! -path 'convex/_generated/*' -delete || true",
    "deploy": "convex deploy",
    "codegen": "convex codegen --typecheck enable",
    "pretest": "test -d convex/_generated && test -f convex/_generated/api.d.ts || pnpm codegen",
    "pretest:e2e": "test -d convex/_generated && test -f convex/_generated/api.d.ts || pnpm codegen",
    "pretest:simulate": "test -d convex/_generated && test -f convex/_generated/api.d.ts || pnpm codegen",
    "test": "vitest",
    "test:simulate": "vitest tests/simulation/simulation.test.ts",
    "test:simulate:watch": "vitest tests/simulation/simulation.test.ts --watch",
    "test:e2e": "vitest tests/simulation/all-scenarios.test.ts",
    "test:e2e:watch": "vitest tests/simulation/all-scenarios.test.ts --watch",
    "test:property": "vitest tests/simulation/property-based.test.ts",
    "test:all": "vitest tests/",
    "test:coverage": "vitest --coverage",
    "test:coverage:ui": "vitest --coverage --ui",
    "analyze-tests": "tsx scripts/analyze-test-results.ts",
    "analyze-tests:issues": "tsx scripts/analyze-test-results.ts --create-issues",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\""
  },
  "dependencies": {
    "@ai-sdk/google": "^2.0.30",
    "@ai-sdk/openai": "^2.0.0",
    "@convex-dev/agent": "^0.2.12",
    "@convex-dev/rag": "^0.5.4",
    "@convex-dev/rate-limiter": "^0.2.14",
    "@convex-dev/twilio": "^0.1.7",
    "@convex-dev/workflow": "^0.2.7",
    "@google/genai": "^1.29.0",
    "ai": "^5.0.90",
    "convex": "^1.29.1",
    "luxon": "^3.4.4",
    "resend": "^6.4.2",
    "rrule": "^2.8.1",
    "stripe": "^19.3.0",
    "zod": "^3.25.40"
  },
  "devDependencies": {
    "@convex-dev/eslint-plugin": "^1.0.0",
    "@edge-runtime/vm": "^5.0.0",
    "@eslint/js": "^9.39.1",
    "@types/luxon": "^3.7.1",
    "@types/node": "^24.10.0",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.8",
    "convex-test": "^0.0.38",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "fast-check": "^4.3.0",
    "js-yaml": "^4.1.1",
    "prettier": "^3.6.2",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4",
    "vitest": "^4.0.8"
  }
}
